@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero Section -->
<section class="position-relative text-white" style="height: 70vh; background: url('/images/petOwner.jpg') center/cover no-repeat;">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0,0,0,0.45);"></div>
    <div class="container h-100 d-flex flex-column justify-content-center align-items-start position-relative" style="z-index: 2;">
        <h1 class="display-3 fw-bold mb-3" style="font-family: 'Baloo 2', cursive;">Get in Touch 🐾</h1>
        <p class="fs-5 text-light col-md-7">
            Have questions, suggestions, or just want to say hello?
            We’d love to hear from you and help make more tails wag!
        </p>
    </div>
</section>

<!-- Contact -->
<section class="py-5" style="background-color: #fffaf4; font-family: 'Baloo 2', cursive;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold" style="color:#4B3621;">Contact FurEver Home</h2>
            <p class="text-muted fs-5">We’re here to connect pet lovers, adopters, and animal advocates — let’s talk!</p>
        </div>

        <div class="row g-5 align-items-center">
            <!-- Contact Info -->
            <div class="col-md-5">
                <div class="card border-0 shadow-lg rounded-4 p-4 h-100">
                    <div class="card-body">
                        <h4 class="fw-bold mb-3 text-warning">Reach Us</h4>
                        <p class="mb-2"><i class="bi bi-envelope-fill text-warning"></i> hello@fureverhome.org</p>
                        <p class="mb-2"><i class="bi bi-telephone-fill text-warning"></i> +63 912 345 6789</p>
                        <p><i class="bi bi-geo-alt-fill text-warning"></i> 123 Paw Street, Manila, Philippines</p>

                        <hr class="my-4">

                        <h4 class="fw-bold mb-3 text-warning">Follow Us</h4>
                        <div>
                            <a href="#" class="text-warning fs-4 me-3"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="text-warning fs-4 me-3"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="text-warning fs-4 me-3"><i class="bi bi-twitter-x"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-md-7">
                <div class="card border-0 shadow-lg rounded-4 p-4">
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Your Name</label>
                                <input type="text" class="form-control rounded-pill shadow-sm" placeholder="Enter your name">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Email Address</label>
                                <input type="email" class="form-control rounded-pill shadow-sm" placeholder="Enter your email">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Message</label>
                                <textarea rows="4" class="form-control rounded-4 shadow-sm" placeholder="Write your message here..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-warning rounded-pill px-4 py-2 fw-semibold shadow">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Decorative -->
<section class="text-center text-white py-5 position-relative overflow-hidden"
         style="background: linear-gradient(135deg, #ffad33, #ff944d);">
    <img src="/images/logo.jpg" alt=""
         style="opacity:0.08; position:absolute; top:15%; left:5%; width:150px; transform: rotate(-15deg);">
    <img src="/images/logo.jpg" alt=""
         style="opacity:0.08; position:absolute; bottom:15%; right:5%; width:180px; transform: rotate(20deg);">

    <div class="container position-relative">
        <h2 class="fw-bold mb-3" style="font-family:'Baloo 2', cursive;">Let’s Build a Kinder World for Pets 💛</h2>
        <p class="fs-5 mb-4">Together, we can turn compassion into action — one paw at a time.</p>
    </div>
</section>
