@{
    ViewData["Title"] = "Our Services";
}
<!-- hero aection -->
<section class="position-relative text-white" style="height: 75vh; background: url('/images/petOwner1.jpg') center/cover no-repeat;">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0,0,0,0.45);"></div>

    <div class="container h-100 d-flex flex-column justify-content-center align-items-start position-relative" style="z-index: 2;">
        <h1 class="display-3 fw-bold mb-3" style="font-family: 'Baloo 2', cursive;">Our Services</h1>
        <p class="fs-5 text-light col-md-7">
            At <span class="fw-semibold text-warning">FurEver Home</span>, we go beyond adoption , we provide care, education, and support to make every pet’s life happier and healthier.
        </p>
        <a href="#services" class="btn btn-warning btn-lg rounded-pill mt-3 fw-semibold shadow">Explore More</a>
    </div>
</section>

<!--services Section -->
<section id="services" class="py-5" style="font-family: 'Baloo 2', cursive; background-color: #fffaf4;">
    <div class="container text-center">
        <h2 class="fw-bold mb-5" style="color: #4B3621;">What We Offer</h2>

        <div class="row justify-content-center g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-lg rounded-4 h-100">
                    <div class="card-body p-4">
                        <div class="display-5 mb-3">🐾</div>
                        <h4 class="fw-bold text-warning mb-3">Adoption Guidance</h4>
                        <p class="text-muted">We carefully match adopters with pets that suit their lifestyle and personality — ensuring long-term, loving homes.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-lg rounded-4 h-100">
                    <div class="card-body p-4">
                        <div class="display-5 mb-3">🏥</div>
                        <h4 class="fw-bold text-warning mb-3">Health & Vet Support</h4>
                        <p class="text-muted">Our partner veterinarians provide essential health services, from checkups to vaccinations and wellness advice.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-lg rounded-4 h-100">
                    <div class="card-body p-4">
                        <div class="display-5 mb-3">📘</div>
                        <h4 class="fw-bold text-warning mb-3">Training & Education</h4>
                        <p class="text-muted">We help pet parents learn best practices for nutrition, behavior, and responsible care through our guides and events.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- invitation Section -->
<section class="text-center text-white py-5 position-relative overflow-hidden"
         style="background: linear-gradient(135deg, #ffad33, #ff944d);">
    <img src="/images/logo.jpg" alt=""
         style="opacity:0.08; position:absolute; top:10%; left:5%; width:150px; transform: rotate(-15deg);">
    <img src="/images/logo.jpg" alt=""
         style="opacity:0.08; position:absolute; bottom:10%; right:5%; width:180px; transform: rotate(20deg);">

    <div class="container position-relative">
        <h2 class="fw-bold mb-3" style="font-family:'Baloo 2', cursive;">Join Us in Making a Difference 🐾</h2>
        <p class="fs-5 mb-4">Every click, every share, every adoption brings another furry friend home.</p>
        <a href="/Pets/FunFacts" class="btn btn-light btn-lg rounded-pill fw-semibold shadow">Learn More</a>
    </div>
</section>
