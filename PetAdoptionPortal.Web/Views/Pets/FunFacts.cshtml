@model List<string>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold fs-1" style="font-family: 'Baloo 2', cursive; color:#4B3621;">
            🐾 Pet Fun Facts & Tips
        </h2>
        <p class="text-secondary fs-5">
            Learn a few cool things about your furry friends and how to care for them!
        </p>
    </div>

    <div class="row justify-content-center">
        @foreach (var fact in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card border-0 rounded-4 shadow-sm h-100 p-3 text-center">
                    <div class="mb-3">
                        <span style="font-size:2rem;">🐶🐱</span>
                    </div>
                    <p class="mb-0 fs-6" style="font-family: 'Baloo 2', cursive;">@fact</p>
                </div>
            </div>
        }
    </div>
</div>
